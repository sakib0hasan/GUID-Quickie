{
  "name": "GUID Quickie",
  "description": "Press Ctrl+Shift+5 from anywhere in your PC to generate new GUID.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "MacCtrl+Shift+5"
      },
      "description": "Copy new GUID to clipboard",
      "global": true
    }
  }
}